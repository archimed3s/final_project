{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "indent": [
      true,
      "tabs",
      4
    ],
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-console": [
      true,
      "log"
    ],
    "max-line-length": false,
    "one-variable-per-declaration": false,
    "whitespace": false
  },
  "rules": {
    "indent": [
      true,
      "tabs",
      4
    ],
    "quotemark": [
      true,
      "single"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-console": [
      true,
      "log"
    ],
    "max-line-length": false,
    "one-variable-per-declaration": false,
    "whitespace": false
  },
  "linterOptions": {
    "exclude": [
      ".next/**/*",
      "coverage/**/*",
      "dist/**/*",
      "docs/**/*",
      "node_modules/**/*"
    ]
  }
}